        <!-- Menu item colors :-
        Green5      - MenuBackground is normal menu item color
        Orange4    - MenuItemSelectedBackground is the background when moiuse is over an item
        White0       - MenuItemForeground handles Foreground when mouse s NOT over the menu item
        Black0       - MenuSelectedForeground handles Foreground when mouse is OVER the menu item
        Blue2         - MenuItemBorderColor is  the border color of EACH menu item
        25              - MenuItemHeight controls the height of ALL MenuItems
        x                 - MenuItemBorderThickness controls gap between menuitems
        -->
        <Menu
			Height="30"
			HorizontalAlignment="Left"
			HorizontalContentAlignment="Stretch"
            local:MenuAttachedProperties.MenuItemSelectedBackground="{StaticResource HeaderBrushYellow}"
            local:MenuAttachedProperties.MenuItemBackground="{StaticResource HeaderBorderBrushYellow}"
            local:MenuAttachedProperties.MenuItemForeground="{StaticResource Black0}"
            local:MenuAttachedProperties.MenuSelectedForeground="{StaticResource White0}"
            local:MenuAttachedProperties.MenuFontSize="14"
            local:MenuAttachedProperties.MenuFontWeight="DemiBold"
            local:MenuAttachedProperties.MenuItemBorderColor="{StaticResource Blue2}"
            local:MenuAttachedProperties.MenuItemBorderThickness="1"
            local:MenuAttachedProperties.MenuItemHeight ="30"
            local:MenuAttachedProperties.MenuItemMargin="2"
            Background="Transparent"
			Grid.Column="1" 
            BorderThickness="3"
            BorderBrush="{StaticResource Black1}"
            Width="810">
  
