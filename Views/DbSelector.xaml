        <!--  Top list for creating new viewers  -->
        <ListBox
			x:Name="sqlSelector"
			Grid.Row="1"
			Grid.Column="1"
			Height="80"
			MinWidth="455"
			VerticalAlignment="Top"
			HorizontalContentAlignment="Stretch"
