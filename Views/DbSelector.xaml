            <!--Menu entries - FOUR single menu options (No dropdown)-->
            <MenuItem  Header="All Colors"
				     Name ="Colors"
				     Click="Colors_Click"
					Background="Transparent"
					Foreground="{StaticResource HorizontalYellowGradient}"
					FontWeight="DemiBold"
					IsTabStop="False"
					Height="25"/>

            <MenuItem Header="  Sys. Colors" 
				    Click="sysColors_Click" 						
